# WordPress配置 - V2.1版本
# 域名不要包含 https://，只需要域名或IP地址
WP_DOMAIN=your-wordpress-domain.com
WP_USERNAME=your_wp_username
# WordPress应用密码，在用户设置中生成
WP_APP_PASSWORD=your_wp_application_password

# 百度AI内容审核配置
# 在百度智能云控制台获取：https://console.bce.baidu.com/ai/#/ai/antiporn/overview/index
BAIDU_API_KEY=your_baidu_api_key_here
BAIDU_SECRET_KEY=your_baidu_secret_key_here

# 外包身份验证令牌（V2.1新增）
# 用于验证外包人员身份的安全令牌
CLIENT_AUTH_TOKEN=your_secure_client_token_here

# 服务配置
PORT=8001
DEBUG=false
TEST_MODE=false